#!/usr/bin/env bash
#
# Prompt user with dmenu before using a command

source environment-colors
source ~/.config/bar/config

label=$1
shift

[[ $(echo -e "No\nYes" | dmenu -fn "$font" \
	-w "$width" \
	-h "$height" \
	-x "$offset_x" \
	-y "$offset_y" \
	-nf "$c_fg" \
	-nb "$c_bg" \
	-sf "$c_fg" \
	-sb "$c_hl" \
	-i -p "$label") == "Yes" ]] && $@
