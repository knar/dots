wks() {
	bspc subscribe |
		while read -r event; do
			IFS=:; set -- $event
			
			dots=""
			while test "$1"; do
				case $1 in
					[OFU]*) dots="$dots ${wks_icons[0]}" ;;
					[ou]*)  dots="$dots ${wks_icons[1]}" ;;
					f*)     dots="$dots ${wks_icons[2]}" ;; 
				esac

				shift
			done

			echo "WORKSPACES$dots"
		done
}

# vim: ft=sh
