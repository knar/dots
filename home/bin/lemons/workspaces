# sourced by bar

wks() {
	foc='\uf764'
	occ='\uf43e'
	fre='\uf43d'

	bspc subscribe |
		while read -r event; do
			IFS=:; set -- $event
			
			dots=
			while test "$1"; do
				case $1 in
					[OFU]*) dots="$dots $foc" ;;
					[ou]*)  dots="$dots $occ" ;;
					f*)     dots="$dots $fre" ;; 
				esac

				shift
			done

			echo "WORKSPACES$dots"
		done
}

# vim: ft=sh
